{
  "name": "floatprompt",
  "version": "1.2.0",
  "description": "Floats your content for AI â€” and humans who use it",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "floatprompt": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./next": {
      "import": "./dist/integrations/next.js",
      "types": "./dist/integrations/next.d.ts"
    },
    "./astro": {
      "import": "./dist/integrations/astro.js",
      "types": "./dist/integrations/astro.d.ts"
    },
    "./next-dynamic": {
      "import": "./dist/integrations/next-dynamic.js",
      "types": "./dist/integrations/next-dynamic.d.ts"
    },
    "./core": {
      "import": "./dist/core/pipeline.js",
      "types": "./dist/core/pipeline.d.ts"
    },
    "./widget": {
      "import": "./dist/widget/index.js",
      "types": "./dist/widget/index.d.ts"
    },
    "./react": {
      "import": "./dist/widget/react.js",
      "types": "./dist/widget/react.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "postinstall": "node dist/cli/postinstall.js || true",
    "test": "node --test test/*.test.js"
  },
  "keywords": [
    "markdown",
    "html",
    "ai",
    "llm",
    "llms.txt",
    "seo",
    "aeo",
    "readability",
    "content-extraction"
  ],
  "author": "MDS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mds/floatprompt.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "dompurify": "^3.2.4",
    "@mozilla/readability": "^0.5.0",
    "turndown": "^7.2.0",
    "turndown-plugin-gfm": "^1.0.2",
    "linkedom": "^0.18.9",
    "glob": "^11.0.0",
    "yaml": "^2.7.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/turndown": "^5.0.5",
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "next": ">=13.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  }
}
