{
  "name": "@floatprompt/scanner",
  "version": "0.1.0",
  "description": "Merkle tree scanner for FloatPrompt - O(log n) change detection",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "scanner",
    "triples": {
      "defaults": false,
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu"
      ]
    }
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "cargo test",
    "universal": "napi universal -t ./artifacts"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "*.node"
  ],
  "license": "MIT",
  "engines": {
    "node": ">= 16"
  }
}
